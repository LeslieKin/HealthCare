<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:paddingRight="@dimen/v_padding_dialog_loading"
  android:paddingLeft="@dimen/v_padding_dialog_loading"
  android:gravity="center"
  android:orientation="horizontal"
  android:background="@drawable/bg_dialog_loading" >

  <ProgressBar android:id="@+id/dialog_loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="?android:attr/progressBarStyle" />

  <TextView android:id="@+id/textview_dialog_loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/v_padding_dialog_loading"
    android:paddingLeft="@dimen/v_padding_dialog_loading"
    android:gravity="center"
    android:text="@string/data_loading"
    android:textColor="@android:color/white"
    android:textSize="@dimen/ts_loading" />
</LinearLayout>